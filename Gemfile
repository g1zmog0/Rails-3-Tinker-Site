  gem 'rspec-rails', :git => 'git://github.com/rspec/rspec-rails.git'
  # use edge so you get the nice cucumber-like dsl
  gem 'capybara', '1.0.0.beta1'
  gem 'haml-rails', '0.3.4'
  gem 'shoulda-matchers', '1.0.0.beta2'
  gem 'launchy'
  gem "jasmine", "1.0.2.0"
end
